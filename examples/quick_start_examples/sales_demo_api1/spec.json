{
    "configVersion": 1,
    "connectionSpecification": {
      "type": "object",
      "required": ["api_key"],
      "properties": {
        "api_key": {
          "type": "string",
          "description": "API Key for authenticating with the QBR Data API",
          "configurationGroupKey": "Authentication",
          "secret": true
        },
        "base_url": {
          "type": "string",
          "description": "API Base URL",
          "configurationGroupKey": "Connection",
          "default": "https://sdk-demo-api-dot-internal-sales.uc.r.appspot.com"
        },
        "page_size": {
          "type": "string",
          "description": "Number of records per page (1-200)",
          "configurationGroupKey": "Advanced",
          "default": "100"
        },
        "max_retries": {
          "type": "string",
          "description": "Maximum number of retry attempts for failed API requests",
          "configurationGroupKey": "Advanced",
          "default": "5"
        }
      }
    }
  }