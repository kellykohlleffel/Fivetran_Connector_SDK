{
    "configVersion": 1,
    "connectionSpecification": {
      "type": "object",
      "required": ["api_token"],
      "properties": {
        "api_token": {
          "type": "string",
          "description": "Personal Access Token for Oura API",
          "configurationGroupKey": "Authentication",
          "secret": true
        },
        "base_url": {
          "type": "string",
          "description": "Oura API Base URL",
          "configurationGroupKey": "Connection",
          "default": "https://api.ouraring.com/v2/"
        }
      }
    }
  }